/* Rofi Configuration - Gohan Theme: {{theme_display_name}} */
/* Generated by Gohan - Theme: {{theme_name}} ({{theme_variant}}) */

configuration {
    modi: "drun,run,window";
    show-icons: true;
    terminal: "kitty";
    drun-display-format: "{name}";
    location: 0;
    disable-history: false;
    hide-scrollbar: true;
    display-drun: "   Apps ";
    display-run: "   Run ";
    display-window: " 﩯  Window";
    display-network: " 󰤨  Network";
    sidebar-mode: true;
}

* {
    bg-col:  {{theme_base}};
    bg-col-light: {{theme_surface}};
    border-col: {{theme_mauve}};
    selected-col: {{theme_mauve}};
    blue: {{theme_blue}};
    fg-col: {{theme_text}};
    fg-col2: {{theme_subtext}};
    grey: {{theme_overlay}};

    width: 600;
    font: "JetBrainsMono Nerd Font 12";
}

element-text, element-icon , mode-switcher {
    background-color: inherit;
    text-color:       inherit;
}

window {
    height: 500px;
    border: 3px;
    border-color: @border-col;
    background-color: @bg-col;
    border-radius: 12px;
}

mainbox {
    background-color: @bg-col;
}

inputbar {
    children: [prompt,entry];
    background-color: @bg-col;
    border-radius: 8px;
    padding: 8px;
}

prompt {
    background-color: @selected-col;
    padding: 8px 12px;
    text-color: @bg-col;
    border-radius: 6px;
    margin: 0px 8px 0px 0px;
}

textbox-prompt-colon {
    expand: false;
    str: ":";
}

entry {
    padding: 8px 4px;
    background-color: @bg-col;
    text-color: @fg-col;
}

listview {
    border: 0px 0px 0px;
    padding: 8px 0px 0px;
    margin: 10px 0px 0px 0px;
    columns: 1;
    lines: 8;
    background-color: @bg-col;
}

element {
    padding: 8px 12px;
    background-color: @bg-col;
    text-color: @fg-col;
    border-radius: 6px;
}

element-icon {
    size: 28px;
}

element selected {
    background-color: @selected-col;
    text-color: @bg-col;
}

mode-switcher {
    spacing: 0;
}

button {
    padding: 10px;
    background-color: @bg-col-light;
    text-color: @grey;
    vertical-align: 0.5;
    horizontal-align: 0.5;
    border-radius: 6px;
}

button selected {
  background-color: @selected-col;
  text-color: @bg-col;
}

message {
    background-color: @bg-col-light;
    margin: 8px;
    padding: 8px;
    border-radius: 6px;
}

textbox {
    padding: 8px;
    border-radius: 6px;
    background-color: @bg-col;
    text-color: @fg-col;
}

