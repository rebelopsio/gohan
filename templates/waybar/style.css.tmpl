/* Waybar Style - Gohan Theme: {{theme_display_name}} */
/* Generated by Gohan - Theme: {{theme_name}} ({{theme_variant}}) */

* {
    font-family: "JetBrainsMono Nerd Font", "Font Awesome 6 Free";
    font-size: 14px;
    min-height: 0;
}

window#waybar {
    background: {{theme_base}};
    color: {{theme_text}};
    border-bottom: 2px solid {{theme_surface}};
}

/* Workspaces */
#workspaces button {
    padding: 0 10px;
    color: {{theme_text}};
    background: transparent;
    border-bottom: 2px solid transparent;
}

#workspaces button.active {
    background: {{theme_surface}};
    border-bottom: 2px solid {{theme_mauve}};
}

#workspaces button:hover {
    background: {{theme_overlay}};
    border-bottom: 2px solid {{theme_blue}};
}

/* Modules */
#clock,
#battery,
#cpu,
#memory,
#temperature,
#backlight,
#network,
#pulseaudio,
#tray,
#mode,
#idle_inhibitor {
    padding: 0 10px;
    margin: 0 5px;
    background: {{theme_surface}};
    color: {{theme_text}};
    border-radius: 8px;
}

/* Clock */
#clock {
    background: {{theme_mauve}};
    color: {{theme_base}};
    font-weight: bold;
}

/* Battery */
#battery {
    background: {{theme_green}};
    color: {{theme_base}};
}

#battery.charging {
    background: {{theme_blue}};
}

#battery.warning:not(.charging) {
    background: {{theme_yellow}};
    color: {{theme_base}};
}

#battery.critical:not(.charging) {
    background: {{theme_red}};
    color: {{theme_base}};
    animation: blink 0.5s linear infinite;
}

@keyframes blink {
    to {
        background: {{theme_maroon}};
    }
}

/* CPU */
#cpu {
    background: {{theme_blue}};
    color: {{theme_base}};
}

/* Memory */
#memory {
    background: {{theme_sky}};
    color: {{theme_base}};
}

/* Network */
#network {
    background: {{theme_teal}};
    color: {{theme_base}};
}

#network.disconnected {
    background: {{theme_red}};
}

/* Pulseaudio */
#pulseaudio {
    background: {{theme_peach}};
    color: {{theme_base}};
}

#pulseaudio.muted {
    background: {{theme_overlay}};
    color: {{theme_subtext}};
}

/* Temperature */
#temperature {
    background: {{theme_lavender}};
    color: {{theme_base}};
}

#temperature.critical {
    background: {{theme_red}};
}

/* Backlight */
#backlight {
    background: {{theme_yellow}};
    color: {{theme_base}};
}

/* Tray */
#tray {
    background: {{theme_surface}};
}

#tray > .passive {
    -gtk-icon-effect: dim;
}

#tray > .needs-attention {
    -gtk-icon-effect: highlight;
    background: {{theme_red}};
}

/* Mode */
#mode {
    background: {{theme_mauve}};
    color: {{theme_base}};
    font-weight: bold;
}

/* Idle Inhibitor */
#idle_inhibitor {
    background: {{theme_pink}};
    color: {{theme_base}};
}

#idle_inhibitor.activated {
    background: {{theme_green}};
}

/* Tooltips */
tooltip {
    background: {{theme_surface}};
    border: 1px solid {{theme_overlay}};
    border-radius: 8px;
}

tooltip label {
    color: {{theme_text}};
}
